module map (
    input clk,
    input rst,
    input player1Posx[7],
    input player1Posy[7],
    input player2Posx[7],
    input player2Posy[7],
    input player1Projx[7],
    input player1Projy[7],
    input player2Projx[7],
    input player2Projy[7],
    //input player2Proj,
   // input showBits[7],
    output mapArr[7][7][24]
) {
    //sig rst; //reset signal

    const COLOR_BLACK = 24h000000;   //6 digits cuz each hexa digit represents 4 binary
    const COLOR_P1 = 24h00ff00;      //red
    const COLOR_P2 = 24h0000ff;      //blue
    const COLOR_PROJ = 24hff0000;    //purple
    const COLOR_OBSTACLE = 24h00ffff;//dark green

    var x, y, pr;

    always {
        for (x = 0; x < 7; x++) {
            for (y = 0; y < 7; y++) {
                mapArr[x][y] = COLOR_BLACK;

                //for the projectiles :
                //mapArr[$clog2(player1Projy)][$clog2(player1Projx)] = COLOR_PROJ;
                //mapArr[$clog2(player2Projy)][$clog2(player2Projx)] = COLOR_PROJ;

                //add the for-loop later:
                //for (pr : player1Proj) {
                //if (player1Projx == x && player1Projy == y) mapArr[x][y] = COLOR_PROJ;
                //}
                //for (pr : player2Proj) {
                //if (player2Projx == x && player2Projy == y) mapArr[x][y] = COLOR_PROJ;
                //}

                //for the players:
                //mapArr[$clog2(player1Posy)][$clog2(player1Posx)] = COLOR_P1;
                //mapArr[$clog2(player2Posy)][$clog2(player2Posx)] = COLOR_P2;
                if (player1Posx == 1 << x && player1Posy == 1 << y) mapArr[x][y] = COLOR_P1;
                else if (player2Posx == 1 << x && player2Posy == 1 << y) mapArr[x][y] = COLOR_P2;
        
                //for the obstacles:
                else if (x == 1 && (y == 1 || y == 3 || y == 5)) mapArr[x][y] = COLOR_OBSTACLE;
                else if (x == 3 && (y == 1 || y == 3 || y == 5)) mapArr[x][y] = COLOR_OBSTACLE;
                else if (x == 5 && (y == 1 || y == 3 || y == 5)) mapArr[x][y] = COLOR_OBSTACLE;
                else if (x == 1 && (y == 2 || y == 4 || y == 6)) mapArr[x][y] = COLOR_OBSTACLE;
        
                else if (player1Projx == (1 << x) && player1Projy == (1 << y)) mapArr[x][y] = COLOR_PROJ;
                else if (player2Projx == (1 << x) && player2Projy == (1 << y)) mapArr[x][y] = COLOR_PROJ;
                
        

            }
        }
    }
}
